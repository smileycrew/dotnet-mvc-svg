@model dotnet_mvc_svg.Models.DTOs.HomeDTO

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="d-flex justify-content-center">
        <div class="d-flex flex-column gap-3 w-100">
            <h1 class="display-4 fst-italic fw-bold">S<span class="display-3 fw-bold">V</span>G</h1>
            <form asp-action="SaveComment" class="border border-2 d-flex flex-fill flex-column gap-3 p-3 rounded">
                <textarea asp-for="UserComment" class="border-0 form-control" id="textareaEl"
                    placeholder="Enter comment here, remember to #hashtag the contestant" rows="3"
                    style="resize: none;"></textarea>

                <div class="d-flex justify-content-between">
                    <p class="text-secondary" id="charCount">150</p>

                    <button class="btn btn-primary rounded-pill">Submit</button>
                </div>
            </form>

            <ul class="list-group">
                @foreach (var comment in Model.Comments)
                {
                    <li class="align-items-center d-flex gap-3 justify-content-between list-group-item">
                        <div class="align-items-center bg-secondary d-flex justify-content-center p-3 rounded">
                            <p class="fs-3 fw-bold text-white m-0" style="">@comment.Contestant.Name[0]</p>
                        </div>
                        <div class="d-flex flex-column text-start w-100">
                            <p class="text-secondary m-0">@comment.Contestant.Name</p>
                            <p class="m-0">@comment.Message</p>
                        </div>
                        <p class="ml-auto">@($"{comment.DaysSincePosted}d")</p>
                    </li>
                }
            </ul>
        </div>

        <ul class="d-flex flex-column gap-3">
            @foreach (var contestant in Model.Contestants)
            {
                <li class="border-0 list-group-item text-start">
                    <a class="bg-secondary px-3 py-2 rounded-pill text-decoration-none text-white"
                        href="@($"{contestant.Name.ToLower()}")">
                        <span>@contestant.Name</span>
                    </a>
                </li>
            }
        </ul>
    </div>
</div>
